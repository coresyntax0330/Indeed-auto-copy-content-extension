{
  "manifest_version": 3,
  "name": "Indeed Content Copier",
  "version": "1.0",
  "description": "Copy insights content from Indeed pages",
  "permissions": ["clipboardWrite", "scripting", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["http://45.15.160.247:5000/*"]
}
